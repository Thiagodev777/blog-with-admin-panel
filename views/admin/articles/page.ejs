<%- include('../../partials/header.ejs') %> 
<body>
    <%- include('../../partials/homenavbar.ejs') %> 
    
    <div class="container">

        <% if(result.articles.rows.length === 0) { %>
            <hr>
            <h1>NÃ£o a mais Artigos a mostrar!</h1>
        <% } else { %>
            <% result.articles.rows.forEach(({id, title, slug}) => { %>
                <div class="card shadow my-5">
                    <div class="card-header">
                        <h2> <%= title %> </h2>
                    </div>
                    <div class="card-body">
                        <a href="<%= slug %>" class="btn btn-success">
                            Ler Artigo...
                        </a>
                    </div>
                </div>
            <% }) %> 
        <% } %> 

        <div class="row my-5">
            <div class="col col-12">
                <% if(result.page > 2) { %>
                    <a style="float: left;" href="/articles/page/<%= result.page - 1 %>"><<< Prev</a>
                <% } else if(result.page == 2) { %>
                    <a style="float: left;" href="/"><<< Prev</a>
                <% } %>

                <% if(result.next) { %>
                    <a style="float: right;" href="/articles/page/<%= result.page + 1 %>">Next >>></a>
                <% } %>
            </div>
        </div>

    </div>
</body>
<%- include('../../partials/footer.ejs') %> 
