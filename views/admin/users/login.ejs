<%- include('../../partials/header.ejs') %> 
<body>
    <%- include('../../partials/loginnavbar.ejs') %> 
    <div class="container">
        <div class="card mt-5 shadow bg-dark text-white mx-auto">
            <div class="card-header">
                <h2 class="text-center text-white fw-bold">LOGIN</h2>
            </div>
            <div class="card-body">
                <form action="/authenticate" method="POST">
                    <div class="my-2">
                        <label for=""">Email:</label>
                        <input class="form-control py-4" type="email" name="email" placeholder="Digite seu e-mail..." required>
                    </div>
                    <div class="my-3>
                        <label for="">Senha:</label>
                        <input class="form-control py-4" type="password" name="password" placeholder="Digite sua senha..." maxlength="8" required>
                    </div>
                    <button type="submit" class="btn btn-block btn-success mt-4 py-2">Login</button>
                    <div class="my-3">
                        <a href="/admin/users/create" class="btn btn-warning btn-block py-2">Cadastre-se</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
