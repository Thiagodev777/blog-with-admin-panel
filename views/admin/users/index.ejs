<%- include('../../partials/header.ejs') %> 
<%- include('../../partials/navbar.ejs') %> 

<body>
    
    <div class="container">
        <h2 class="mt-5">Usuarios</h2>
        <a href="/admin/users/create" class="btn btn-success mb-4">Cadastrar Novo Usuario</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(({id, email}) => { %>
                    <tr>
                        <td> <%= id %> </td>
                        <td> <%= email %> </td>
                        <td>
                            <button class="btn btn-warning">Editar</button>
                            <button class="btn btn-danger">Deletar</button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

</body>

